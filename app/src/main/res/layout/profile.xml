<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:scaleType="centerInside"
        android:src="@drawable/love"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <dev.datvt.busfun.utils.CustomFontTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Bus GO v1.0"
            android:textColor="@color/colorRed"
            android:textSize="25dp"
            android:textStyle="bold"/>

        <dev.datvt.busfun.utils.CustomFontTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Deverloper"
            android:textColor="@color/colorBlack"
            android:textSize="16dp"/>

        <dev.datvt.busfun.utils.CustomFontTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Vũ Thế Đạt (DatVIT)"
            android:textColor="@color/colorBlue2"
            android:textSize="20dp"
            android:textStyle="bold"/>

        <dev.datvt.busfun.utils.CustomFontTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="CNTT 2.04 - K58 - HUST"
            android:textColor="@color/colorOrange"
            android:textSize="16dp"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/border_bg"
        android:paddingBottom="10dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingTop="10dp">

        <LinearLayout
            android:id="@+id/lnEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">

            <dev.datvt.busfun.utils.CustomFontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Email: "
                android:textColor="#000000"
                android:textSize="16dp"/>

            <dev.datvt.busfun.utils.CustomFontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:text="@string/email"
                android:textColor="@color/colorBlue2"
                android:textSize="16dp"
                android:textStyle="italic"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lnPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/lnEmail"
            android:layout_below="@+id/lnEmail"
            android:orientation="horizontal">

            <dev.datvt.busfun.utils.CustomFontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Phone: "
                android:textColor="#000000"
                android:textSize="16dp"/>

            <dev.datvt.busfun.utils.CustomFontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="0981449295"
                android:textColor="@color/colorGreen2"
                android:textSize="16dp"
                android:textStyle="italic"/>
        </LinearLayout>
    </RelativeLayout>

    <Button
        android:id="@+id/btnClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/border_btn"
        android:text="Đóng"
        android:textColor="@color/colorWhite"
        android:textStyle="bold"/>
</LinearLayout>
